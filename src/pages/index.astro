---
import { getCollection } from 'astro:content';
import Base from '../layouts/Base.astro';
import Modal from '../components/islands/Modal.tsx';

const services = await getCollection('services');
---

<Base title="Nirvana">
	<h1 class="text-4xl font-bold text-brand-600 mt-8">Welcome to Nirvana</h1>
	
	<div class="mt-8">
		<Modal client:visible />
	</div>
	
	<section class="mt-12">
		<h2 class="text-2xl font-bold mb-6">Our Services</h2>
		<div class="grid gap-4">
			{services.map((service) => (
				<a 
					href={`/services/${service.slug}`} 
					class="p-4 border rounded-lg hover:bg-gray-50 transition-colors"
				>
					<h3 class="text-xl font-semibold text-brand-600">{service.data.title}</h3>
					<p class="text-gray-600 mt-2">{service.data.short}</p>
					<div class="mt-2 text-sm text-gray-500">
						<span class="mr-4">üí∞ {service.data.price}</span>
						<span>‚è±Ô∏è {service.data.duration}</span>
					</div>
				</a>
			))}
		</div>
	</section>
</Base>
